<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field="appResources" type="org.rest.client.resources.AppResources" />
	<ui:style>
		.error {
			color: red;
			margin: 0;
			padding: 0;
		}
	</ui:style>
	<g:DialogBox ui:field="dialog" modal="true"
		animationEnabled="true" glassEnabled="true">
		<g:caption>Error set header</g:caption>
		<g:HTMLPanel>
			<h2 class="{style.error}">This header cannot be set</h2>
			<p>According to W3C specification this header cannot be set.</p>
			<p>
			You can find the list of headers that cannot be set via XMLHttpRequest<br/>
			on W3C website <a href="http://www.w3.org/TR/XMLHttpRequest/#the-setrequestheader-method" target="_blank">www.w3.org/TR/XMLHttpRequest</a>
			</p>
			<div class="{appResources.appCss.dialogButtons}">
				<g:Button styleName="{appResources.appCss.button}" ui:field="dismiss">Dismiss</g:Button>
			</div>
		</g:HTMLPanel>
	</g:DialogBox>
</ui:UiBinder> 