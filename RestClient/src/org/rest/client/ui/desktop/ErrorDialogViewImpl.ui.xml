<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.message {
			height: 350px;
			width: 400px;
		}
		.error{
			
		}
	</ui:style>
	<g:DialogBox ui:field="errorDialog" glassEnabled="true" animationEnabled="true" addStyleNames="dialog-error">
		<g:caption>
			An unexpected error has occurred
    	</g:caption>
		<g:HTMLPanel>
			<g:TextArea ui:field="errorMessage" readOnly="true"
				stylePrimaryName="{style.message}"></g:TextArea>
			<br />
			<g:Button ui:field="dismiss">Continue</g:Button>
			<g:Button ui:field="reload">Reload</g:Button>
		</g:HTMLPanel>
	</g:DialogBox>
</ui:UiBinder>