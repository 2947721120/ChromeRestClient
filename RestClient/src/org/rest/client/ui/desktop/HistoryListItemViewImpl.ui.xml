<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" >
	<ui:with field="appResources" type="org.rest.client.resources.AppResources" />
	<ui:style type="org.rest.client.ui.desktop.HistoryListItemViewImpl.WidgetStyle">
		.itemWrapper{
			padding: 3px;
			margin: 3px 10px 3px 3px;
			border: 1px transparent solid;
			border-bottom: 1px rgba(229, 229, 229, 0.12) solid;
		}
		.listRow{}
		.flex{
			display: -webkit-flex;
			display: -mox-flex;
			display: -ms-flex;
			display: -o-flex;
			display: flex;
		}
		.method,
		.url,
		.date,
		.action{
			-webkit-align-items: center;
		}
		.date{
			margin-right: 1em;
		}
		.method{
			margin-right: 1em;
			font-weight: bold;
			cursor: pointer;
		}
		.url{ 
			-webkit-flex: 1 0 0px;
			-moz-flex: 1 0 0px;
			-ms-flex: 1 0 0px;
			-o-flex: 1 0 0px;
			flex: 1 0 0px; 
			margin-right: 7px;
			cursor: pointer;
			width: 1px;
			overflow: hidden;
		}
		.urlValue{
			display: block;
			line-height: 2em;
			text-overflow: ellipsis;
			overflow: hidden;
			white-space: nowrap;
		}
		.flex1{
			-webkit-flex: 1 0 0px;
			-moz-flex: 1 0 0px;
			-ms-flex: 1 0 0px;
			-o-flex: 1 0 0px;
			flex: 1 0 0px; 
		}
		.action{}
		.headers{
			max-height: 100px;
			overflow: hidden;
			text-overflow: ellipsis;
			white-space: pre; 
			width: 1px;display: block;
		}
		.payload{
			max-height: 100px;
			overflow: hidden;
			text-overflow: ellipsis;
			white-space: pre; 
			margin-right: 15px;
			width: 1px;
			display: block;
		}
		.encoding{margin-right: 15px;}
		.detailed{margin-top: 15px;}
		.selectButton{padding: 0px;}
		.selected{
			border-color: #BED8FF;
			background-color: #F7FBFF;
			margin-bottom: 10px;
			margin-top: 10px;
			border-radius: 2px;
<!-- 			box-shadow: 0px 0px 8px rgba(100, 162, 255, 0.47); -->
		}
	</ui:style>
	<g:HTMLPanel ui:field="container" addStyleNames="{style.itemWrapper}">
		<div class="{style.listRow} {style.flex}">
			<g:InlineLabel styleName="{style.date} {style.flex}" ui:field="dateLabel"></g:InlineLabel>
			<g:InlineLabel styleName="{style.method} {style.flex}" ui:field="methodLabel"></g:InlineLabel>
			<g:HTMLPanel styleName="{style.url} {style.flex}" ui:field="urlLabel">
				<g:InlineLabel styleName="{style.urlValue}" ui:field="urlValue"></g:InlineLabel>
			</g:HTMLPanel>
			<span class="{style.action} {style.flex}">
				<g:Button ui:field="select" styleName="{appResources.appCss.button} {style.selectButton}">Select</g:Button>
			</span>
		</div>
		<div class="{appResources.appCss.hidden} {style.flex} {style.detailed}" ui:field="detailedPanel">
			<span class="{style.encoding} {style.flex} " ui:field="encoding"></span>
			<span class="{style.payload} {style.flex} {style.flex1}" ui:field="payload"></span>
			<span class="{style.headers} {style.flex} {style.flex1}" ui:field="headers"></span>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>