<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="org.rest.client.ui.desktop.StatusNotification.WidgetStyle">
		.flashMessage{
			width: 410px;
			padding: 15px 10px;
			font-weight: bold;
			position: fixed;
			bottom: 25px;
			left: 50%;
			text-align: center;
			z-index: 100;
			color: white;
			margin-left: -205px;
		}
		.inline{
			display: inline-block;
		    vertical-align: top;
		}
		.info{
			width: 318px;
			font-weight: bold;
			text-align: center;
			z-index: 102;
			position: relative;
			border-right: 2px #CECECE solid;
		}
		.dismiss{
			width: 75px;
			margin: 2px;
			font-size: 12px;
			z-index: 102;
			position: relative;
			font-weight: bold;
	    }
	    .dismissAnchor{
			font-weight: bold;
			font-size: 12px;
			color: white;
			text-decoration: underline;
		}
	    .common{}
	    .error {color: black;}
		.critical {}
		.error .backgroundPanel{
			border-color: red;
			border-width: 1px;
			border-style: solid;
			background-color: #FFF500;
		}
		.critical .backgroundPanel{
			border-color: #630707;
			border-width: 1px;
			border-style: solid;
			background-color: red;
		}
		.error .dismissAnchor{
			color: #000;
		}
		.hidden{display: none;}
		.backgroundPanel{
			position: absolute;
			top: 0;
			bottom: 0px;
			left: 0;
			right: 0;
			background-color: black;
			opacity: 0.6;
			border-radius: 8px;
			-moz-border-radius: 5px;
			-webkit-border-radius: 10px;
			-o-border-radius: 5px;
			-ms-border-radius: 5px;
		}
	</ui:style>
	<g:HTMLPanel stylePrimaryName="{style.flashMessage}" ui:field="mainPanel">
		<g:HTMLPanel stylePrimaryName="{style.backgroundPanel}" ui:field="backgroundPanel"></g:HTMLPanel>
		<div class="{style.info} {style.inline}">
			<g:InlineLabel ui:field="message" text="aaa"></g:InlineLabel>
		</div>
		<div class="{style.dismiss} {style.inline}">
		<g:Anchor ui:field="flashDismiss" href="javascript:;" styleName="{style.dismissAnchor}" title="Dismiss" text="dismiss"></g:Anchor>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>