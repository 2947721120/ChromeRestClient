<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<g:HTMLPanel ui:field="root">
		<h1 class="Shortcut_View_contentTitle Shortcut_View_about">Edit shortcuts</h1>
		<section class="Shortcut_View_aboutContent">
			<div class="Shortcut_View_row">
				<span class="Shortcut_View_label">
					Open
				</span>
				<p class="Shortcut_View_desc">Show "saved requests" panel</p>
				<div class="Shortcut_View_input">
					<g:ToggleButton ui:field="openRequestCtrlToggle" addStyleNames="Shortcut_View_toggleButton" text="ctrl"></g:ToggleButton>
					<g:ToggleButton ui:field="openRequestShiftToggle" addStyleNames="Shortcut_View_toggleButton" text="shift"></g:ToggleButton>
					<g:ToggleButton ui:field="openRequestAltToggle" addStyleNames="Shortcut_View_toggleButton" text="alt"></g:ToggleButton>
					<g:TextBox ui:field="openLetter" name="openLetter" maxLength="1"></g:TextBox>
				</div>
			</div>
			<div class="Shortcut_View_row">
				<span class="Shortcut_View_label">
					Save
				</span>
				<p class="Shortcut_View_desc">Show "save request" dialog</p>
				<div class="Shortcut_View_input">
					<g:ToggleButton ui:field="saveRequestCtrlToggle" addStyleNames="Shortcut_View_toggleButton" text="ctrl"></g:ToggleButton>
					<g:ToggleButton ui:field="saveRequestShiftToggle" addStyleNames="Shortcut_View_toggleButton" text="shift"></g:ToggleButton>
					<g:ToggleButton ui:field="saveRequestAltToggle" addStyleNames="Shortcut_View_toggleButton" text="alt"></g:ToggleButton>
					<g:TextBox ui:field="saveLetter" name="saveLetter" maxLength="1"></g:TextBox>
				</div>
			</div>
			<div class="Shortcut_View_row">
				<span class="Shortcut_View_label">
					Send request
				</span>
				<p class="Shortcut_View_desc">Fire current request</p>
				<div class="Shortcut_View_input">
					<g:ToggleButton ui:field="sendRequestCtrlToggle" addStyleNames="Shortcut_View_toggleButton" text="ctrl"></g:ToggleButton>
					<g:ToggleButton ui:field="sendRequestShiftToggle" addStyleNames="Shortcut_View_toggleButton" text="shift"></g:ToggleButton>
					<g:ToggleButton ui:field="sendRequestAltToggle" addStyleNames="Shortcut_View_toggleButton" text="alt"></g:ToggleButton>
					<g:TextBox ui:field="sendLetter" name="sendLetter" maxLength="1"></g:TextBox>
				</div>
			</div>
			<div class="Shortcut_View_row">
				<span class="Shortcut_View_label">
					History
				</span>
				<p class="Shortcut_View_desc">Show "history" tab</p>
				<div class="Shortcut_View_input">
					<g:ToggleButton ui:field="historyCtrlToggle" addStyleNames="Shortcut_View_toggleButton" text="ctrl"></g:ToggleButton>
					<g:ToggleButton ui:field="historyShiftToggle" addStyleNames="Shortcut_View_toggleButton" text="shift"></g:ToggleButton>
					<g:ToggleButton ui:field="historyAltToggle" addStyleNames="Shortcut_View_toggleButton" text="alt"></g:ToggleButton>
					<g:TextBox ui:field="historyLetter" name="historyLetter" maxLength="1"></g:TextBox>
				</div>
			</div>
		</section>
		<div class="Shortcut_View_backLink">
			<g:Anchor href="about:blank" ui:field="backLink">Back to settings</g:Anchor>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>