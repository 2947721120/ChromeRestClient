<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:with field="appResources" type="org.rest.client.resources.AppResources" />
	<ui:style>
		
		.container {
			padding: 30px 40px;
		}
		
		.button {
			margin-left: 10px;
		}
		.errorField{
			color: red;
		}
	</ui:style>
	<g:DialogBox ui:field="dialog" modal="true"
		animationEnabled="true" glassEnabled="true">
		<g:HTMLPanel ui:field="contents" styleName="container">
			<div class="dialogTitle">
				<span>Add new form encoding</span>
			</div>
			<div>
				<g:TextBox ui:field="encoding" width="400px"></g:TextBox>
			</div>
			<div class="{appResources.appCss.hidden} {style.errorField}" ui:field="errorField"></div>
			<div class="{appResources.appCss.dialogButtons}">
				<g:Button styleName="{appResources.appCss.button}"
					ui:field="save">Save
				</g:Button>
				<g:Button styleName="{appResources.appCss.button}"
					ui:field="cancel">Cancel
				</g:Button>
			</div>
		</g:HTMLPanel>
	</g:DialogBox>
</ui:UiBinder>