<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:h5="urn:import:org.rest.client.ui.html5">
	<ui:with field="appResources" type="org.rest.client.resources.AppResources"/>
	<ui:style type="org.rest.client.ui.desktop.widget.RequestBodyWidget.WidgetStyle">
		.rawInput{
			box-sizing: border-box;
			width: 100%;
			height: 100px;
			border:none;
		}
		.selectedFilesList{
			list-style-type: disc;
			margin-left: 30px;
			margin-bottom: 15px;
		}
		.filesContainer ul{
			-webkit-box-orient: vertical;
		}
	</ui:style>
	<g:HTMLPanel styleName="{appResources.appCss.tabsPanel}">
		
		<div class="{appResources.appCss.tabs}">
			<div class="{appResources.appCss.inlineButtonsGroup}">
				<g:InlineLabel ui:field="rawTab" styleName="{appResources.appCss.inlineButton} {appResources.appCss.inlineButtonChecked}">Raw</g:InlineLabel>
				<g:InlineLabel ui:field="formTab" styleName="{appResources.appCss.inlineButton}">Form</g:InlineLabel>
				<g:InlineLabel ui:field="filesTab" styleName="{appResources.appCss.inlineButton}">Files (0)</g:InlineLabel>
			</div>
			<span class="{appResources.appCss.tabCaption}">Payload</span>
		</div>
		
		<div ui:field="tabContent" class="{appResources.appCss.tabsContent}">
			<section data-tab="raw" class="{appResources.appCss.tabContent} {appResources.appCss.tabContentCurrent}">
				<g:TextArea ui:field="payloadRawInput" styleName="{style.rawInput}"></g:TextArea>
			</section>
			<section data-tab="form" class="{appResources.appCss.tabContent}">
				<!-- Add new form value button -->
				<g:Anchor styleName="{appResources.appCss.addValueAnchor}" ui:field="addValue" href="#">Add new value</g:Anchor>
				
				<g:HTMLPanel ui:field="payloadFormPanel">
					
				</g:HTMLPanel>
			</section>
			<section data-tab="file" class="{appResources.appCss.tabContent}">
				<!-- Add new file value button -->
				<g:Anchor styleName="{appResources.appCss.addValueAnchor}" ui:field="addFile" href="#">Add new file field</g:Anchor>
				<g:HTMLPanel ui:field="filesFormPanel" styleName="{style.filesContainer}">
					
				</g:HTMLPanel>
			</section>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>
