<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style type="org.rest.client.ui.desktop.widget.JSONViewer.ParserStyle" >
		@def indent 15px; 
		.prettyPrint{}
		.bodyPanel {
			font-family: monospace;
			font-size: 10pt;
			color: black;
			cursor: text;
		}
		<!-- 
		.numeric,
		.nullValue,
		.booleanValue,
		.stringValue,
		.keyName{
			white-space: nowrap;
		}
		-->
		
		.numeric{
			color: blue;
		}
		.nullValue{
			color: #708;
		}
		.booleanValue{
			color: #708;
		}
		.punctuation{
			color: black;
		}
		.stringValue{
			color: #48A;
		}
		.node{position: relative;white-space: nowrap;}
		.arrayCounter{
			color: gray;
			font-size: 11px;
		}
		.arrayCounter:before {
			content: "size";
		}
		.keyName{
			color: rgb(206,123,0)
		}
		.rootElementToggleButton{
			position: absolute;
			top: 0px;
			left: -9px;
			font-size: 14px;
			cursor: pointer;
			font-weight: bold;
		}
		.infoRow{
			display: inline-block;
			margin: 0px 7px;
			text-indent: 0px;
		}
	</ui:style>
	<g:HTML ui:field="result" styleName="bodyPanel"></g:HTML>
</ui:UiBinder>