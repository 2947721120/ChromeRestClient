<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:h5="urn:import:org.rest.client.ui.html5">
	<ui:with field="appResources" type="org.rest.client.resources.AppResources" />
	<ui:style>
		.contentTitle {
			-webkit-padding-end: 24px;
			-webkit-user-select: none;
			color: black;
			font-size: 175%;
			font-weight: normal;
			margin: 0;
			padding-bottom: 14px;
			padding-top: 13px;
			text-align: end;
			cursor: pointer;
		}
		
		.contentTitle.about {
			-webkit-padding-start: 24px;
			text-align: start;
		}
		
		.aboutContent {
			-webkit-padding-start: 24px;
			text-align: start;
			text-shadow: white 0 1px 2px;
			border-bottom: 1px solid #eeeeee;
			margin-top: 17px;
			padding-bottom: 20px;
		}
		
		.aboutContent>div {
			margin-bottom: 7px;
		}
		
		.historyClear,.historyAmount {
			display: inline-block;
			margin-left: 20px;
		}
		
		.jsonHeaderCaption {
			font-weight: bold;
		}
		
		.optionsSection {
			-webkit-padding-start: 24px;
			border-bottom: 1px solid #EEE;
			margin-top: 17px;
			padding-bottom: 20px;
		}
	</ui:style>
	<g:HTMLPanel ui:field="root">
		<h1 class="{style.contentTitle} {style.about}">Advanced configuration and experimental features</h1>
		<section class="{style.optionsSection}">
			<p>Debug options</p>
			<g:CheckBox ui:field="debug" value="false"
				text="Enable debug messages in console output"></g:CheckBox>
		</section>
		<section class="{style.optionsSection}">
			<p>History enabled</p>
			<g:CheckBox ui:field="history" value="true"
				text="Enable requests history list"></g:CheckBox>
			<div class="{appResources.appCss.hidden} {style.historyAmount}" ui:field="historyAmount">
				Remember last
				<h5:HTML5InputNumber ui:field="historyCount"></h5:HTML5InputNumber>
				requests
			</div>
			<div class="{appResources.appCss.hidden} {style.historyClear}" ui:field="historyClear">
				<g:Button styleName="{appResources.appCss.button}" ui:field="clearHistory" text="Clear history"></g:Button>
			</div>
		</section>
		<section class="{style.optionsSection}">
			<p>Cookie capture enabled</p>
			<g:CheckBox ui:field="cookie" value="false"
				text="Enable cookie capture during request"></g:CheckBox>
			<a
				href="http://restforchrome.blogspot.com/2011/11/cookies-capture-experimental-feature.html">read more about this</a>
		</section>
		<section class="{style.optionsSection}">
			<p>Shortcuts</p>
			<g:Button styleName="{appResources.appCss.button}" ui:field="shortCutsButton" text="Edit shortcuts"></g:Button>
		</section>
		<section class="{style.optionsSection}">
			<p>JSON headers</p>
			<g:Button styleName="{appResources.appCss.button}" ui:field="jsonHeadersWidget" text="Manage"></g:Button>
		</section>
		<section class="{style.optionsSection}">
			<p>Import/export</p>
			<g:Button styleName="{appResources.appCss.button}" ui:field="importExportWidget" text="Manage"></g:Button>
		</section>
	</g:HTMLPanel>
</ui:UiBinder>