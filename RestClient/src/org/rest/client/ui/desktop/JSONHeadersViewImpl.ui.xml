<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:rcui="urn:import:org.rest.client.ui.desktop.widget"
	xmlns:h5="urn:import:org.rest.client.ui.html5">
	<ui:with field="appResources" type="org.rest.client.resources.AppResources" />
	<ui:style>
		.contentTitle {
			-webkit-padding-end: 24px;
			-webkit-user-select: none;
			color: black;
			font-size: 175%;
			font-weight: normal;
			margin: 0;
			padding-bottom: 14px;
			padding-top: 13px;
			text-align: end;
			cursor: pointer;
		}
		
		.contentTitle.about {
			-webkit-padding-start: 24px;
			text-align: start;
		}
		
		.aboutContent {
			-webkit-padding-start: 24px;
			text-align: start;
			text-shadow: white 0 1px 2px;
			border-bottom: 1px solid #eeeeee;
			margin-top: 17px;
			padding-bottom: 20px;
		}
		
		.aboutContent>div {
			margin-bottom: 7px;
		}
		.jsonHeaderCaption{
			font-weight:bold;
		}
		.addForm{ 
			margin-top: 15px;
		}
		.backLink{
			margin-top: 20px;
		}
	</ui:style>
	<g:HTMLPanel ui:field="root">
		<h1 class="{style.contentTitle} {style.about}">JSON Headers</h1>
		<section class="{style.aboutContent}">
			<p>List of JSON headers recognized by application.</p>
			<p>If responses Content-Type header contains one of values below will run JSON response view.</p>
			<g:Grid ui:field="jsonHeadersList" width="300">
				<g:row>
					<g:customCell styleName="{style.jsonHeaderCaption}">
						<g:Label>Header name</g:Label>
					</g:customCell>
					<g:customCell>
						<g:HTML>&nbsp;</g:HTML>
					</g:customCell>
				</g:row>
			</g:Grid>
			<div class="{style.addForm}">
				<g:TextBox ui:field="newHeaderValue"></g:TextBox>
				<g:Button ui:field="addJSONHeader" text="Add new"></g:Button>
			</div>
			<div class="{style.backLink}">
				<g:Anchor href="javascript:;" ui:field="backLink">Back to settings</g:Anchor>
			</div>
		</section>
	</g:HTMLPanel>
</ui:UiBinder>