<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field="appResources" type="org.rest.client.resources.AppResources" />
	<ui:style>
		.loader-info {margin-bottom: 7px;font-weight: bold;}
		.loader-info > span {font-weight: bold;  font-size: 20px;}
		.loader-wrapper {margin: 10px; width: 300px;}
		.holder {border: 1px #189B06 solid; height: 3px; padding: 0px;position: relative;}
		.loaded {
			height: 100%; 
			background-color: #189B06; 
			width: 0%;
			-webkit-transition: width 0.2s linear;
		}
		.pacman{
			position: absolute;
			top: -10px;
			left: 0px;
			-webkit-transition: left 0.2s linear;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.loader-wrapper}">
		<div class="{style.loader-info}">
			<g:Label ui:field="loadingInfo" addStyleNames="loadingInfo">Loading...</g:Label>
		</div>
		<div class="loader-container">
			<div class="{style.holder}">
				<div class="{style.loaded}" ui:field="progress"></div>
				<div class="{style.pacman} {appResources.appCss.loaderImage}" ui:field="pacman"></div>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 