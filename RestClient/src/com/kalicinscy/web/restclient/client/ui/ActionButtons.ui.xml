<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' 
	xmlns:p1="urn:import:com.kalicinscy.web.restclient.client.ui">
	<g:HTMLPanel>
		<div class="action-buttons">
			<div class="buttons-right">
				<div class="sending" ui:field="sendingDiv">
					sending...<span class="size-counter" ui:field="sizeCounter"></span>: 
					<p1:Progress ui:field="uploadProgress" width="200px" height="20px" />
				</div>
				<div class="sending" ui:field="receivingDiv">
					receiving: 
					<p1:Progress ui:field="requestProgress" width="130px" height="20px" />
				</div>
				<g:Button ui:field="clearForm">Clear form</g:Button>
				<g:Button ui:field="sendRequest">Send request</g:Button>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>