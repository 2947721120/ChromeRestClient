<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<g:HTMLPanel styleName="Query_Detailed_Row_row Query_Detailed_Row_flex">
		<g:SimplePanel styleName="Query_Detailed_Row_block Query_Detailed_Row_flex">
		    <g:TextBox ui:field="nameBox"></g:TextBox>
		</g:SimplePanel>
		<g:SimplePanel styleName="Query_Detailed_Row_block Query_Detailed_Row_flex Query_Detailed_Row_valueBlock">
		    <g:TextBox ui:field="valueBox"></g:TextBox>
		</g:SimplePanel>
		<div class="Query_Detailed_Row_block Query_Detailed_Row_flex">
			<paper-icon-button icon="close" title="Remove parameter" ui:field="removeButton" data-remove-row="true"></paper-icon-button>
			<paper-button ui:field="encodeButton" title="Encode query string. Use CTRL to replace + with %20" data-encode-row="true">enc</paper-button>
			<paper-button ui:field="decodeButton" title="Decode query string. Use CTRL to replace %20 with +" data-decode-row="true">dec</paper-button>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 