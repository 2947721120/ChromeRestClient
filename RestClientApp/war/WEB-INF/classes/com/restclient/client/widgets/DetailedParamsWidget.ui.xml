<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="../common.css" type="com.restclient.client.widgets.DetailedParamsWidget.WidgetStyle">
		.detailedPanel {
			display: -webkit-box;
			-webkit-box-orient: vertical;
			margin: 5px 0px 10px 0px;
		}
		
		.detailedFormLabel {
			display: -webkit-box;
		}
		
		.detailedFormInput {
			width: 608px;
			padding-left: 10px;
		}
		
		.detaildeInput {
			width: 100%;
		}
		
		.detailedSection {
			display: -webkit-box;
			margin-bottom: 15px;
		}
		.paramValueTextBoxStyle{
			width: 400px;
		}
		.removeButton{
			padding: 0 4px;
			margin: 0 0 0 5px;
		}
		.getLabel{-webkit-box-orient: vertical;}
		.paramAddAnchor{text-align: right;text-decoration: underline;cursor:pointer;}
	</ui:style>
	<!-- detailed host panel -->
	<g:HTMLPanel ui:field="detailedUrlParams" stylePrimaryName="{style.detailedPanel}">
		<!-- Detailed host input -->
		<section class="{style.detailedSection}">
			<div class="{style.detailedFormLabel}">
				Host
			</div>
			<div class="{style.detailedFormInput}">
				<g:TextBox ui:field="detailedHost" addStyleNames="{style.detaildeInput}"></g:TextBox>
			</div>
		</section>
		<!-- Detailed PATH inputs -->
		<section class="{style.detailedSection}">
			<div class="{style.detailedFormLabel}">
				Path
			</div>
			<div class="{style.detailedFormInput}">
				<g:TextBox ui:field="detailedPath" addStyleNames="{style.detaildeInput}"></g:TextBox>
			</div>
		</section>
		<!-- Detailed GET params inputs -->
		<section class="{style.detailedSection}">
			<div class="{style.detailedFormLabel} {style.getLabel}">
				<p>GET Params</p>
				<p class="{style.paramAddAnchor}"><g:Anchor ui:field="addDetailedParam">Add</g:Anchor></p>
			</div>
			<g:HTMLPanel stylePrimaryName="{style.detailedFormInput}" ui:field="queryParamsContainer">
				
			</g:HTMLPanel>
			
		</section>
		<!-- Detailed GET HASH param -->
		<section class="{style.detailedSection}">
			<div class="{style.detailedFormLabel}">
				Hash
			</div>
			<div class="{style.detailedFormInput}">
				<g:TextBox ui:field="detailedHash" addStyleNames="{style.detaildeInput}"></g:TextBox>
			</div>
		</section>
	</g:HTMLPanel>
</ui:UiBinder>