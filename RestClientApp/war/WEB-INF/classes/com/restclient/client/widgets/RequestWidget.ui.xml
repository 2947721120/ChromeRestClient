<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:rc="urn:import:com.restclient.client.widgets"
	xmlns:h5="urn:import:com.restclient.client.html5">
	<ui:style src="../common.css">
		.section{
			margin: 7px;
		}
		.sectionTitle{
			font-weight: bold;
			padding: 12px 0;
		}
		.requestForm{
			
		}
		.rowInput{
			-webkit-box-flex: 1;
		}
		.suggestBox{
			padding: 0 1em 0 0.5em;
		}
		.gwt-SuggestBox{
			padding: 2px;
			width: 100%;
			-webkit-border-radius: 2px;
			border: 1px solid rgb(170, 170, 170);
		}
		.action-buttons {
			-webkit-box-align: center;
			-webkit-box-orient: horizontal;
			-webkit-box-pack: end;
			display: -webkit-box;
			padding: 12px;
			margin-top: 10px;
		}
		.buttons-right {
			-webkit-box-orient: horizontal;
			display: -webkit-box;
		}
		.buttons-right > button {
			-webkit-margin-start: 10px;
			display: block;
		}
		.size-counter {
			margin-left: 7px;
		}
		.tabPanelFix{
			margin-bottom: 20px;
		}
	</ui:style>
	<g:HTMLPanel ui:field="requestPanel">
		<section class="{style.section}">
			<div class="{style.requestForm}">
				<div class="{style.formRow}">
					<div class="{style.rowLabel}">URL</div>
					<div class="{style.rowInput} {style.suggestBox}">
						<g:SuggestBox styleName="{style.gwt-SuggestBox}" ui:field="urlField"></g:SuggestBox>
					</div>
				</div>
				<div class="{style.formRow}">
					<div class="{style.rowLabel}">Method</div>
					<div class="{style.rowInput}">
						<rc:MethodsWidget ui:field="methodsWidget"></rc:MethodsWidget>
					</div>
				</div>
				<div class="{style.formRow}">
					<div class="{style.rowLabel}">Headers</div>
					<div class="{style.rowInput} {style.tabPanelFix}">
						<rc:HeaderInputWidget ui:field="headersWidget"></rc:HeaderInputWidget>
					</div>
				</div>
				<div ui:field="requestBodyControls" style="display:none;">
					<div class="{style.formRow}">
						<div class="{style.rowLabel}">Body</div>
						<div class="{style.rowInput} {style.tabPanelFix}">
							<rc:BodyInputWidget ui:field="bodyWidget"></rc:BodyInputWidget>
						</div>
					</div>
					<div class="{style.formRow}">
						<div class="{style.rowLabel}">Content-type</div>
						<div class="{style.rowInput}">
							<g:ListBox ui:field="contentType"></g:ListBox>
						</div>
					</div>
				</div>
			</div>
			<div class="{style.action-buttons}">
				<div class="{style.buttons-right}">
					<div class="sending hidden" ui:field="sendingDiv">
						sending...<span class="{style.size-counter}" ui:field="sizeCounter"></span>: 
						<h5:HTML5Progress ui:field="uploadProgress" width="200px" height="20px"></h5:HTML5Progress>
					</div>
					<div class="sending hidden" ui:field="receivingDiv">
						receiving: 
						<h5:HTML5Progress ui:field="requestProgress" width="130px" height="20px"></h5:HTML5Progress>
					</div>
					<g:Button ui:field="clearForm">Clear form</g:Button>
					<g:Button ui:field="sendRequest">Send request</g:Button>
				</div>
			</div>
		</section>
	</g:HTMLPanel>
</ui:UiBinder> 