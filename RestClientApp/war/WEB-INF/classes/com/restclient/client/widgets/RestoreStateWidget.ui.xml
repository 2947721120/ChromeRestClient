<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:h5="urn:import:com.restclient.client.html5">
	<ui:style>
		.pager{
			display: -webkit-box;
			-webkit-box-pack: center;
			-webkit-box-align: center;
			-webkit-box-orient: horizontal;
			display: -moz-box;
			-moz-box-pack: center;
			-moz-box-align: center;
			-moz-box-orient: horizontal;
		}
		.mainTable{table-layout: fixed;}
		.appImportPanel{
			margin: 20px;
		}
		.keyBox{
			width: 200px;
		}
	</ui:style>
	<g:HTMLPanel ui:field="tableContainer">
		<c:CellTable addStyleNames="{style.mainTable}" width="100%" ui:field="table" pageSize="12"></c:CellTable>
		<div class="{style.pager}">
			<c:SimplePager ui:field="pager"/>
		</div>
		<div class="{style.appImportPanel}">
			<p>Open from another application. Paste import key:</p>
			<g:TextBox addStyleNames="{style.keyBox}" ui:field="openKey"></g:TextBox>
			<g:Button ui:field="appImport" text="Open"></g:Button>
			<p>It will replace current form.</p>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 