<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.loader-info > span {font-weight: bold;  font-size: 20px;}
		.loader-wrapper {margin: 10px; width: 300px;}
		.holder {border: 1px blue solid; height: 10px; padding: 2px;}
		.loaded {height: 100%; background-color: blue; width: 0%;}
	</ui:style>
	<g:HTMLPanel>
		
		<div class="{style.loader-wrapper}">
			<div class="{style.loader-info}">
				<span ui:field="loadingInfo">Loading...</span>
			</div>
			<div class="loader-container">
				<div class="{style.holder}">
					<div class="{style.loaded}" ui:field="progress"></div>
				</div>
			</div>
		</div>
		
	</g:HTMLPanel>
</ui:UiBinder> 