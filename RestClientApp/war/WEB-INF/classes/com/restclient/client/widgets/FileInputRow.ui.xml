<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:rc="urn:import:com.restclient.client.widgets"
	xmlns:h5="urn:import:com.restclient.client.html5">
	<ui:style>
		.formRow{
			margin: 10px 0;
		}
		.filename{
			display: -webkit-box;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.formRow}">
		
		<div class="{style.filename}">
			<div>File field name</div>
			<div>
				<g:TextBox ui:field="formName"></g:TextBox>
			</div>
		</div>	
		<div>
			<h5:HTML5FileUpload multiple="true" ui:field="fileObject"></h5:HTML5FileUpload>
			<g:Button text="Remove" ui:field="removeButton"></g:Button>
		</div>
		
	</g:HTMLPanel>
</ui:UiBinder> 