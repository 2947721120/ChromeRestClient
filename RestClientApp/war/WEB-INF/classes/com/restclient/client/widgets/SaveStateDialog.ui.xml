<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style src="../common.css">
		.dialog{
			width: 498px;
			height: 108px;
		}
		.error{
			color: red;
		}
	</ui:style>
	<g:DialogBox ui:field="dialog" modal="true"
		animationEnabled="true" glassEnabled="true">
		<g:caption>Save current form state</g:caption>
		<g:VerticalPanel>
			<g:HTMLPanel ui:field="dataValuesPanel" styleName="{style.dialog}">
				<p>
					Enter record name<br/>
					<g:TextBox width="493px" ui:field="stateName"></g:TextBox>
				</p>
				<g:Label ui:field="errorLabel" styleName="{style.error}" visible="false"></g:Label>
				<div class="{style.dialog-buttons}">
					<g:Button styleName="{style.button}" ui:field="save" enabled="false">Save</g:Button>
					<g:Button styleName="{style.button}" ui:field="cancel">Cancel</g:Button>
				</div>
			</g:HTMLPanel>
			<g:HTMLPanel ui:field="overwriteInfoPanel" styleName="{style.dialog}" visible="false">
				<p>
					You already have form with this name. You can:<br/>
					- overwrite existing (it will remove previous data)<br/>
					- save as new (duplicate name)<br/>
					- back to change name
				</p>
				<div class="{style.dialog-buttons}">
					<g:Button styleName="{style.button}" ui:field="overwrite">Overwrite</g:Button>
					<g:Button styleName="{style.button}" ui:field="saveAsNew">Save as new</g:Button>
					<g:Button styleName="{style.button}" ui:field="back">Back</g:Button>
				</div>
			</g:HTMLPanel>
		</g:VerticalPanel>
	</g:DialogBox>
</ui:UiBinder>