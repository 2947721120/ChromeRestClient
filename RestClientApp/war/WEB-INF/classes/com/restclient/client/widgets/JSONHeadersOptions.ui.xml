<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="../common.css">
		
		.jsonHeaderCaption{
			font-weight:bold;
		}
		.addForm{ 
			margin-top: 15px;
		}
		
	</ui:style>
	<g:HTMLPanel styleName="{style.subpageContainer}">
		<g:Button styleName="{style.subpageCloseButton}" ui:field="closeButton" text="x"></g:Button>
		<h1 class="{style.contentTitle} {style.about}">JSON headers</h1>
		<p>List of JSON headers recognized by application.</p>
		<p>If responses Content-Type header contains one of values below will run JSON response view.</p>
		<g:Grid ui:field="jsonHeadersList" width="300">
			<g:row>
				<g:customCell styleName="{style.jsonHeaderCaption}">
					<g:Label>Header name</g:Label>
				</g:customCell>
				<g:customCell>
					<g:HTML>&nbsp;</g:HTML>
				</g:customCell>
			</g:row>
		</g:Grid>
		<div class="{style.addForm}">
			<g:TextBox ui:field="newHeaderValue"></g:TextBox>
			<g:Button ui:field="addJSONHeader" text="Add new"></g:Button>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 