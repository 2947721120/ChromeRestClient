<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style type="com.restclient.client.widgets.HeaderLine.LineStyle">
		.helpDescItem {
			border: 1px solid #90B8DE;
			border-left: none;
			border-right: none;
			background: #F0F6FF;
			margin: 2em;
			display: block;
			margin-top: 1em;
			margin-bottom: 1em;
			padding: 0 0.5em;
			padding-bottom: 0.5em;
		}
		
		.hdExample {
			font-style: italic;
			border: 1px grey solid;
			display: inline-block;
			padding: 3px 4px;
			border-radius: 3px;
			margin-left: 10px;
		}
		
		.hdExample:before {
			content: "eg. ";
		}
		
		.hdName {
			display: block;
			font-weight: bold;
			font-size: medium;
		}
		
		.hintWrapper > div,
		.hintWrapper > a {
			font-size: 12px;
			text-decoration: none;
		}
		.hintTitle {
			cursor: pointer;
			font-weight: bold;
		}
		.hintTitle:after {
			content: url(/img/help-hint.png);
			padding-left: 6px;
			vertical-align: middle;
			-webkit-transition: opacity 0.25s ease;
			opacity: 0.7;
		}
		.opened {
			
		}
		.hintWrapper.opened > .hintTitle:after,
		.hintWrapper > a.hintTitle:hover:after {
			opacity: 1;
		}
		.hintWrapper.opened > a.hintTitle:after {
			content: none;
		}
		.hintInfo {
			display: none;
			overflow: hidden;
			height: 0px;
			display: block;
			-webkit-transition: height 0.3s ease;
		}
		.hdDesc{}
	</ui:style>
	<g:HTMLPanel styleName="{style.hintWrapper}">
		<g:Anchor ui:field="title" stylePrimaryName="{style.hintTitle}" />
		<div class="{style.hintInfo}" ui:field="hintParent">
			<span class="{style.helpDescItem}">
				<span class="{style.hdName}" ui:field="headerName"></span>
				<br />
				<span class="{style.hdDesc}" ui:field="desc"></span>
				<span class="{style.hdExample} hidden" ui:field="example"></span>
			</span>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>