<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:rc="urn:import:com.restclient.client.widgets">
	<ui:style>
		.raw{}
		.cellPadding{
			padding-right: 14px !important;
		}
	</ui:style>
	<g:TabLayoutPanel ui:field="tabPanel" barHeight="2" barUnit="EM" width="100%">
		<g:tab>
			<g:header size='7'>Raw input</g:header>
			<g:SimplePanel styleName="{style.cellPadding}">
				<g:HTMLPanel styleName="{style.raw}">
					<g:TextArea width="100%" height="100%" visibleLines="4" ui:field="rawInput"/>
				</g:HTMLPanel>
			</g:SimplePanel>
		</g:tab>
		<g:tab>
			<g:header size='7'>Form</g:header>
			<g:SimplePanel styleName="{style.cellPadding}">
				<rc:BodyFormWidget ui:field="form"></rc:BodyFormWidget>
			</g:SimplePanel>
		</g:tab>
		<g:tab>
			<g:header size='7'>File</g:header>
			<g:SimplePanel styleName="{style.cellPadding}">
				<rc:FileInputWidget ui:field="file"></rc:FileInputWidget>
			</g:SimplePanel>
		</g:tab>
	</g:TabLayoutPanel>
</ui:UiBinder> 