<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.radioBox {
			margin: 0px 2px;
			padding: 2px 2px;
		}
		.methodsWidget{
			display: -webkit-box; -webkit-box-orient: horizontal;
		}
		.otherInput{
			font-size: 11px;
			width: 150px;
			vertical-align: top;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.methodsWidget}">
		<div class="{style.radioBox}">
			<g:RadioButton name="method" text="GET" ui:field="radioGet" checked="true"></g:RadioButton>
		</div>
		<div class="{style.radioBox}">
			<g:RadioButton name="method" text="POST" ui:field="radioPost"></g:RadioButton>
		</div>
		<div class="{style.radioBox}">
			<g:RadioButton name="method" text="PUT" ui:field="radioPut"></g:RadioButton>
		</div>
		<div class="{style.radioBox}">
			<g:RadioButton name="method" text="PATCH" ui:field="radioPatch"></g:RadioButton>
		</div>
		<div class="{style.radioBox}">
			<g:RadioButton name="method" text="DELETE" ui:field="radioDelete"></g:RadioButton>
		</div>
		<div class="{style.radioBox}">
			<g:RadioButton name="method" text="HEAD" ui:field="radioHead"></g:RadioButton>
		</div>
		<div class="{style.radioBox}">
			<g:RadioButton name="method" text="OPTIONS" ui:field="radioOptions"></g:RadioButton>
		</div>
		<div class="{style.radioBox}">
			<g:RadioButton name="method" text="Other" ui:field="radioOther"></g:RadioButton>
			<g:TextBox ui:field="otherMethodValue" enabled="false" addStyleNames="{style.otherInput}"></g:TextBox>
		</div>
		
	</g:HTMLPanel>
</ui:UiBinder> 