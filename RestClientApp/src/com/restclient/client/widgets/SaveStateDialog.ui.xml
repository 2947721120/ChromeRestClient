<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style src="../common.css">
		.dialog{
			width: 498px;
			height: 108px;
		}
	</ui:style>
	<g:DialogBox ui:field="dialog" modal="true"
		animationEnabled="true" glassEnabled="true">
		<g:caption>Save current form state</g:caption>
		<g:HTMLPanel ui:field="contents" styleName="{style.dialog}">
			<p>
				Enter record name<br/>
				<g:TextBox width="493px" ui:field="stateName"></g:TextBox>
			</p>
			<div class="{style.dialog-buttons}">
				<g:Button styleName="{style.button}" ui:field="save" enabled="false">Save</g:Button>
				<g:Button styleName="{style.button}" ui:field="cancel">Cancel</g:Button>
			</div>
		</g:HTMLPanel>
	</g:DialogBox>
</ui:UiBinder>