<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:h5="urn:import:com.restclient.client.html5">
	<ui:style src="../common.css" type="com.restclient.client.widgets.OptionsWidget.Style">
		.optionsSection{
			-webkit-padding-start: 24px;
			border-bottom: 1px solid #EEE;
			margin-top: 17px;
			padding-bottom: 20px;
		}
		.optionsWidget{
			position: relative;
		}
		.noLocalStorageLabel{
			position: fixed;
			top: 50px;
			left: 300px;
			border: 1px red solid;
			background-color: white;
			padding: 30px;
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel ui:field="mainWidget" addStyleNames="{style.optionsWidget}">
		<h1 class="{style.contentTitle} {style.about}">Advanced configuration and experimental features</h1>
		<section class="{style.optionsSection}">
			<p>Debug options</p>
			<g:CheckBox ui:field="debug" value="false" text="Enable debug messages in console output"></g:CheckBox>
		</section>
		<section class="{style.optionsSection}">
			<p>History enabled</p>
			<g:CheckBox ui:field="history" value="true" text="Enable requests history list"></g:CheckBox>
			<div class="{style.hidden}" ui:field="historyAmount">
				<p>Remember last 
				<h5:HTML5InputNumber ui:field="historyCount"></h5:HTML5InputNumber> requests
				</p>
			</div>
		</section>
	</g:HTMLPanel>
</ui:UiBinder> 