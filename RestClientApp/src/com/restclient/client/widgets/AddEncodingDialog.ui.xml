<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.dialog-buttons{
			-webkit-box-align: center;
			-webkit-box-orient: horizontal;
			-webkit-box-pack: end;
			display: -webkit-box;
			padding: 10px;
		}
		.button{
			margin-left: 10px;
		}
	</ui:style>
	<g:DialogBox ui:field="dialog" modal="true"
		animationEnabled="true" glassEnabled="true">
		<g:caption>Add new form encoding</g:caption>
		<g:HTMLPanel ui:field="contents">
			<div>
				<g:TextBox ui:field="encoding" width="400px"></g:TextBox>
			</div>
			<div class="{style.dialog-buttons}">
				<g:Button styleName="{style.button}" ui:field="save">Save</g:Button>
				<g:Button styleName="{style.button}" ui:field="cancel">Cancel</g:Button>
			</div>
		</g:HTMLPanel>
	</g:DialogBox>
</ui:UiBinder>