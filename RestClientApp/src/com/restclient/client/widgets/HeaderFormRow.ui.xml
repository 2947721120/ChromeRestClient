<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="com.restclient.client.widgets.HeaderFormRow.HeaderStyle">
		.formRow{
			display: -webkit-box;
		}
		.headerName{
			padding-right: 7px;
			position: relative;
		}
		.headerValue{
			-webkit-box-flex: 1;
			padding-right: 7px;
		}
		.nameInput{
			width: 200px;
		}
		.valueInput{
			width:100%;
		}
		.deleteRowBox{
			width: 70px;
		}
		.hasNoSupport{}
		.headerSupportHint{
			position: absolute;
			top: 4px;
			right: 8px;
			background-image: url(/img/help-hint.png);
			width: 14px;
			height: 16px;
			cursor: pointer;
			-webkit-transition: opacity 0.25s ease;
			opacity: 0.3;
		}
		.headerSupportHint:hover{
			opacity: 1;
		}
		.hasNoSupport .headerSupportHint{
			display: none;
		}
		.headerDesc{}
		.headerExample{}
		.headersDescPopup{}
		.headersDescPopup .headerExample {
			font-style: italic;
			font-size: 11px;
		}
		.headersDescPopup .headerExample:before {
			content: "eg. ";
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
		<div class="{style.formRow}">
			<div class="{style.headerName} {style.hasNoSupport}">
				<g:SuggestBox styleName="{style.nameInput}" ui:field="headerName"></g:SuggestBox>
				<g:HTML styleName="{style.headerSupportHint}" ui:field="hintHandler"></g:HTML>
			</div>
			<div class="{style.headerValue}">
				<g:TextBox styleName="{style.valueInput}" ui:field="headerValue"></g:TextBox>
			</div>
			<div class="{style.deleteRowBox}">
				<g:Button text="Remove" ui:field="removeBtn"></g:Button>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 