<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="common.css" type="com.restclient.client.StatusNotification.WidgetStyle">
		.flashMessage{
			width: 410px;
		    background-color: yellow;
		    padding: 3px 10px;
		    font-weight: bold;
		    position: fixed;
		    top: 5px;
		    left: 5px;
		    text-align: center;
		    border-radius: 5px;
		    -moz-border-radius: 5px;
		    -webkit-border-radius: 5px;
		    -o-border-radius: 5px;
		    -ms-border-radius: 5px;
		    border: 1px #F0F0F0 solid;
		    z-index: 10;
		}
		.inline{
			display: inline-block;
		    vertical-align: top;
		}
		.info{
			width: 318px;
		    font-weight: normal;
		    text-align: center;
		}
		.dismiss{
			width: 75px;
		    margin: 2px;
		    border-left: 2px #000 solid;
		    font-size: 11px;
	    }
	    .common{}
	    .error {
		    color: red;
		    font-weight: bold;
		    border-color: red;
		}
		.critical {
		    background-color: red;
		    color: #fff;
		    font-weight: bold;
		}
		.criticalMessage a {
		    color: #fff;
		}
	</ui:style>
	<g:HTMLPanel stylePrimaryName="{style.flashMessage}" ui:field="mainPanel">
		<div class="{style.info} {style.inline}">
			<g:InlineLabel ui:field="message" text="aaa"></g:InlineLabel>
		</div>
		<div class="{style.dismiss} {style.inline}">
		<g:Anchor ui:field="flashDismiss" href="javascript:;" title="Dismiss" text="dismiss"></g:Anchor>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>